[user]
    name = Franklin Hu
    email = franklin@stripe.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    b = branch
    co = checkout
    f = fetch
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(cyan)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=rfc
    lgclean = log --graph --pretty=format:'%h %an -%d %s (%cr)' --abbrev-commit --date=relative
    log1 = log --format=oneline
    m = merge
    st = status -sb
    status = status -sb
[help]
    autocorrect = 1
[rerere]
    enabled = 1 # replays merge conflict resolutions
[push]
    default = upstream
[branch "master"]
    mergeoptions = --ff-only
